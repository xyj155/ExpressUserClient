<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fafafa" />
    <FrameLayout
        android:id="@+id/fl_user_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <com.example.administrator.expressuserclient.weight.CircleImageView
                android:id="@+id/img_user_head"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_margin="@dimen/dp_15"
                android:src="@mipmap/w3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="用户名"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="手机号码" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@mipmap/ic_go" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#fafafa" />

    <TextView
        android:id="@+id/tv_problem_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#fff"
        android:drawableLeft="@mipmap/ic_user_proble"
        android:drawablePadding="@dimen/dp_10"
        android:drawableRight="@mipmap/ic_go"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="8dp"
        android:text="问题订单"
        android:textColor="#000" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fafafa" />

    <TextView
        android:id="@+id/tv_address_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#fff"
        android:drawableLeft="@mipmap/ic_user_location_list"
        android:drawablePadding="@dimen/dp_10"
        android:drawableRight="@mipmap/ic_go"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="8dp"
        android:text="地址簿"
        android:textColor="#000" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fafafa" />

    <TextView
        android:id="@+id/tv_my_collection"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#fff"
        android:drawableLeft="@mipmap/ic_user_colletion"
        android:drawablePadding="@dimen/dp_10"
        android:drawableRight="@mipmap/ic_go"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="8dp"
        android:text="我的收藏"
        android:textColor="#000" />


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#fafafa" />

    <TextView
        android:id="@+id/tv_service"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#fff"
        android:drawableLeft="@mipmap/ic_user_service"
        android:drawablePadding="@dimen/dp_10"
        android:drawableRight="@mipmap/ic_go"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="8dp"
        android:text="服务中心"
        android:textColor="#000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fafafa" />

    <TextView
        android:id="@+id/tv_settting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#fff"
        android:drawableLeft="@mipmap/ic_user_setting"
        android:drawablePadding="@dimen/dp_10"
        android:drawableRight="@mipmap/ic_go"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="8dp"
        android:text="设置"
        android:textColor="#000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fafafa" />
</LinearLayout>